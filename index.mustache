<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<title>{{ basics.name }}</title>
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="description" content="{{basics.summary}}"/>
<meta name="keywords" content="{{basics.name}} {{#skills}}{{#keywords}}{{.}} {{/keywords}}{{/skills}}" />
<link href="./index.css" rel="stylesheet" />
<link rel="icon" type="image/png" href="./favicon.ico">
<link rel="apple-touch-icon" href="./apple-touch-icon.png">
</head>

  <body class="bg-gray-900 text-gray-50">

    <nav class="flex items-center justify-between px-6 py-4 bg-gray-800 shadow-sm sticky top-0 z-10">
      <div class="flex items-center gap-3">
        <img class="w-9 h-9 rounded" src="./n.svg" alt="Logo"/>
        <b class="text-lg text-gray-50">{{ basics.name }}</b>
      </div>

      <div class="flex gap-6 text-sm font-medium items-center">
        <a class="flex hover:text-gray-200 items-center gap-1" href="{{ basics.profiles.0.url }}">
          <img src="./github.svg" class="w-8 h-8 invert"/>
        </a>
        <a class="hover:text-gray-200 bg-gray-700 rounded p-2" href="#contact-form">Contact</a>
      </div>
    </nav>

    <main class="max-w-6xl mx-auto flex flex-col-reverse md:flex-row gap-10 px-6 py-10">

      <aside id="sidebar" class="md:w-64 flex flex-col gap-10">

        <img class="rounded-full hidden md:flex" src="noah.jpg"/>

        <section id="skills">
          <h2 class="font-bold text-xl mb-4 text-gray-100">Skills</h2>
          {{#skills}}
            <div class="mb-6">
              <h3 class="text-lg font-semibold text-gray-100">{{ name }}</h3>
              <ul class="ml-4 mt-2 flex flex-wrap gap-2 text-gray-300">
                {{#keywords}}
                  <li>
                    <span class="text-sm bg-gray-800 text-gray-200 px-3 py-1 rounded-md">
                      {{ . }}
                    </span>
                  </li>
                {{/keywords}}
              </ul>
            </div>
          {{/skills}}
        </section>


        <section class="mb-10">
          <h2 class="font-bold text-xl mb-2 text-gray-100">Location</h2>
          <p class="text-gray-300">{{ basics.location.city }} {{ basics.location.region }}</p>
        </section>

        <form id="contact-form"
          class="p-6 bg-gray-800 shadow-md rounded-lg space-y-4 text-gray-50"
          method="POST"
          name="contact"
          data-netlify="true"
        >
          <h2 class="font-bold text-xl mb-2 text-gray-50">Contact Me</h2>
          <input type="hidden" name="form-name" value="contact" />

          <div class="flex flex-col">
            <label class="font-medium mb-1" for="name">Name</label>
            <input type="text" name="name" id="name" required
              class="border border-gray-700 bg-gray-900 text-gray-50 rounded-md px-3 py-2 focus:ring-2 focus:ring-gray-50 focus:outline-none"/>
          </div>

          <div class="flex flex-col">
            <label class="font-medium mb-1" for="email">Email</label>
            <input type="email" name="email" id="email" required
              class="border border-gray-700 bg-gray-900 text-gray-50 rounded-md px-3 py-2 focus:ring-2 focus:ring-gray-50 focus:outline-none"/>
          </div>

          <div class="flex flex-col">
            <label class="font-medium mb-1" for="telephone">Phone Number (Optional)</label>
            <input type="tel" name="telephone" id="telephone"
              class="border border-gray-700 bg-gray-900 text-gray-50 rounded-md px-3 py-2 focus:ring-2 focus:ring-gray-50 focus:outline-none"/>
          </div>

          <div class="flex flex-col">
            <label class="font-medium mb-1" for="message">Message</label>
            <textarea name="message" id="message" rows="4"
              class="border border-gray-700 bg-gray-900 text-gray-50 rounded-md px-3 py-2 focus:ring-2 focus:ring-gray-50 focus:outline-none"></textarea>
          </div>

          <button type="submit"
            class="w-full bg-gray-700 text-gray-50 font-semibold py-2 rounded-md hover:cursor-pointer hover:bg-gray-600 transition">
            Send Message
          </button>
        </form>

      </aside>

      <section class="flex-1 leading-relaxed">

        <section id="summary" class="mb-10">
          <p class="text-sm text-gray-400">Hi, my name is</p>
          <h1 class="font-bold text-4xl mt-1 text-gray-50">{{ basics.name }}</h1>
          <h2 class="text-xl"> {{basics.label}}</h2>
          <p class="mt-3 text-gray-300">{{ basics.summary }}</p>
        </section>

        <section id="experience" class="mb-10">
          <h2 class="font-bold text-xl mb-4 text-gray-50">Work Experience</h2>
          {{#work}}
            <div class="mb-8">
              <h3 class="text-lg font-semibold text-gray-100">{{ position }}</h3>
              <a href="{{url}}" class="hover:underline italic text-gray-400 flex items-center gap-1">
                {{ name }} <img class="w-4 h-4" src="./external-link.svg"/>
              </a>
              <div class="text-sm">{{ startDate}} {{#endDate}}- {{ endDate}}{{/endDate}}</div>
              <ul class="list-disc ml-6 mt-2 text-gray-300">
                {{#highlights}}
                  <li>{{ . }}</li>
                {{/highlights}}
              </ul>
            </div>
          {{/work}}
        </section>

        <section id="education" class="mb-10">
          <h2 class="font-bold text-xl mb-4 text-gray-50">Education</h2>
          {{#education}}
            <div class="mb-6">
              <h3 class="text-lg font-semibold text-gray-100">{{ institution }}</h3>
              <p class="italic text-gray-400">{{ studyType }} — {{ area }}</p>
              <p class="text-sm">Graduated {{ endDate }}, GPA {{ score }}</p>
            </div>
          {{/education}}
        </section>

        <section id="projects" class="mb-10">
          <h2 class="font-bold text-xl mb-4 text-gray-50">Projects</h2>
          {{#projects}}
            <div class="mb-8">
              <a href="{{ url }}" class="group inline-flex items-center gap-2 hover:underline">
                <h3 class="text-lg font-semibold text-gray-100 group-hover:text-gray-300">{{ name }}</h3>
                <img src="./external-link.svg" class="w-4 h-4"/>
              </a>
              <p class="text-gray-300 mt-1">{{ description }}</p>
              <ul class="list-disc ml-6 mt-2 text-gray-300">
                {{#highlights}}
                  <li>{{ . }}</li>
                {{/highlights}}
              </ul>
            </div>
          {{/projects}}
        </section>

      </section>
    </main>

    <footer class="text-center py-6 text-sm flex flex-col justify-center items-center gap-2 border-t border-gray-700">
      <section class="grid grid-cols-2 md:flex  gap-4">
        <a class="hover:underline flex gap-1 items-center" href="./Noah_Burnette_Resume.pdf">Resume <img class="w-5 h-5" src="./download.svg"/></a>
        <a class="hover:underline flex gap-1 items-center" href="{{ basics.profiles.0.url }}">Github <img class="w-5 h-5 invert" src="./github.svg"/></a>
        <a class="hover:underline flex gap-1 items-center" href="https://jsonresume.org/">JSON Resume <img class="w-5 h-5" src="./external-link.svg"/></a>
        <a class="hover:underline flex gap-1 items-center" href="mailto:{{basics.email}}">Email <img class="w-5 h-5" src="./mail.svg" /></a>
      </section>

      <section class="flex gap-1 text-gray-500">
        <div>© {{ basics.name }}</div>
        <div id="year"></div>
      </section>
    </footer>


  </body>
  <script>
    document.getElementById('year').innerText = new Date().getFullYear();
  </script>
</html>
